{
    "name": "matt182/hexlet-psr-linter",

    "require": {
        "squizlabs/php_codesniffer": "2.*",
        "nategood/commando": "*",
        "nikic/php-parser": "^2.1"
    },
    "require-dev": {
       "phpunit/phpunit": "5.*",
       "codeclimate/php-test-reporter": "dev-master"
    },
    "authors": [
      {
        "name": "Egor Lebedev",
        "email": "mattspring0@gmail.com"
      }
    ],
    "autoload": {
        "psr-4": {
          "HexletPsrLinter\\": "src/",
          "HexletPsrLinter\\Checkers\\": "src/checkers/"
        },
        "files": [
            "src/File.php",
            "src/Linter.php",
            "src/NodeCheckers.php",
            "src/NodeVisitor.php",
            "src/Output.php",
            "src/Parser.php",
            "src/Tree.php"
        ]
    },
    "bin": ["bin/psrlinter"]
}
